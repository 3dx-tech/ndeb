# --------------------
# Use permission "0755" "filename"
function permission {
  : "${1:?'Template file was not defined'}"
  : "${2:?'Permissions not defined'}"

  declare -r permission="$1"
  declare -r file="$2"

  chmod -R "$permission" "$file"
}
# --------------------
