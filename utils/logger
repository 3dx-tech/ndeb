#!/bin/bash

set -eo pipefail

# --------------------
# ğ˜•ğ˜°ğ˜µğ˜ªğ˜¤ğ˜¦:
#
# ğ˜›ğ˜©ğ˜¦ ğ˜­ğ˜°ğ˜¨ğ˜¨ğ˜¦ğ˜³ ğ˜§ğ˜¶ğ˜¯ğ˜¤ğ˜µğ˜ªğ˜°ğ˜¯ğ˜´
# ğ˜§ğ˜°ğ˜³ ğ˜±ğ˜³ğ˜ªğ˜¯ğ˜µ ğ˜¤ğ˜¶ğ˜³ğ˜³ğ˜¦ğ˜¯ğ˜µğ˜­ğ˜º
# ğ˜´ğ˜µğ˜¢ğ˜µğ˜¶ğ˜´ ğ˜´ğ˜µğ˜¢ğ˜¨ğ˜¦
# --------------------

GREEN=$'\e[0;32m'
YELLOW=$'\e[1;33m'
RED=$'\e[31m'

# --------------------
# Use log 'message...'
function log {
  echo "${GREEN}Progress:" "$@"
}
# Use warn 'message...'
function warn {
  echo "${RED}Warning:" "$@"
}
# Use 1 'message...'
function debug {
  if [ "$1" -eq 1 ]; then
    echo "${YELLOW}Debug:" "$2"
  fi
}
# --------------------
