# --------------------
# Use VAR=$(os)
function os {
  case $(uname) in
    'Linux')
      echo 'Linux'
      ;;
    'FreeBSD')
      echo 'FreeBSD'
      ;;
    'Darwin')
      echo 'Mac'
      ;;
    'SunOS')
      echo 'Solaris'
      ;;
    'AIX') ;;
    *) ;;
  esac
}
